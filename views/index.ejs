<!doctype html>

<html lang="en">
  <meta charset="utf-8">

  <head>
    <title>Express</title>
    <link rel="stylesheet" href="public/stylesheets/style.css">
  </head>

  <body>
    <h1>Express</h1>
    <div id="display-table">
      <table>
        <% filteredData.forEach((listing, idx) => { %>
          <tr>
            <td class="price"><%= listing.price.price %></td>
            <td class="price"><%= (idx !== 0) ? listing.price.change : 'NA' %></td>
            <td class="price"><%= (idx !==0) ? listing.price.direction : 'NA' %></td>
            <td class="date"><%= `${listing.date.year}-${listing.date.month}-${listing.date.date}` %></td>
            <td class="day"><%= `${listing.date.day}`%></td>
          </tr>
        <% }); %>
      </table>
    </div>
    <script src="public/javascripts/script.js"></script>
  </body>

</html>
